#Weather Report Data Analysis

import pandas as pd 

data = pd.read_csv(r"D:/Cloudy-ML/Python-projects/weather Analysis/Data/Weather Data.csv")

print(data)

#Analyzig Data 

#.head()- Analyzing Columns Names
print(data.head())

#Shape - Used to show total number of columns and total number of columns
print(data.shape)

#.index 
print(data.index)

#.columns
print(data.columns)

#.dtypes
print(data.dtypes)

#.unique() - Accessing the values in each Column
print(data['Weather'].unique())

#.nunique()
print(data.nunique())

#.count
print(data.count)

#value_counts
print(data.value_counts)

#.info()
print(data.info())

# 1)find all unique "windspeed" values in Data
print(data['Wind Speed_km/h'].nunique())
print(data['Wind Speed_km/h'].unique())

#2)Find the Number of Times when Weather is Exactly Clear !
print(data.Weather.value_counts())
print(data[data.Weather == 'Clear'])

#groupby()
print(data.groupby('Weather').get_group('Clear'))

# 3)Find the Number of Times when the Wind Speed was Exactly 4km/h 
print(data[data['Wind Speed_km/h'] == 4])

#.isnull()(to find the null values in data set) boolean  - .sum() to get values in int
print(data.isnull().sum())

#.notnull()
print(data.notnull().sum())

# 4)rename column Weather to Weather Condition
print(data.rename(columns= {'Weather':'Weather Condition'},inplace = True))

print(data.head())

# 5)What is the Mean Visibility_km - 27.664446721311478 - Mean 

print(data.Visibility_km.mean())  

# 6)What is the Standard Deviation in Pressure in Data ?? - std = 0.8440047459486483
print(data.Press_kPa.std())

# 7)What is Variance in Rel Hum_% of the data  - Var - 286.24855019850196
print(data['Rel Hum_%'].var())

# 8)Find all the instances where Snow was Recorded
print(data['Weather Condition'].value_counts()) 
print(data[data['Weather Condition'].str.contains('Snow')])

# 9)Find all instances when wind speed is above 24 and visibity is 25
print(data[(data['Wind Speed_km/h']>24) & (data['Visibility_km'] == 25)])

# 10)What is the Mean Value of Each column against Weather Condition
print(data.groupby('Weather Condition').mean())

# 11)what is the min and max values of each column against 'Weather Condition' ??
print(data.groupby('Weather Condition').min())
print(data.groupby('Weather Condition').max())

# 12)Show all records which has Fog in Weather Conditions
print(data[data['Weather Condition']=='Fog'])

# 13)find all instances when 'Weather is Clear' or Visibility is above 40.
print(data[(data['Weather Condition'] == 'Clear') | (data['Visibility_km'] > 40)])

# 14)Find all instances when Weather is 'Clear' and 'Rel Hum_%' is grater than 50 or visibility is above 40.
print(data[(data['Weather Condition']=='Clear') & (data['Rel Hum_%'] > 50) | (data['Visibility_km']>40)])
